# MAIN
    # pitch ranges
PITCH_MAX = int(pitch.Pitch('B9').ps)
PITCH_MIN = int(pitch.Pitch('C0').ps)
    # write scores
song.write("musicxml", argv[2] + '_music21.musicxml')

